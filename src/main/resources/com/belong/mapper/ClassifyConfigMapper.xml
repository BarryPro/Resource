<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.belong.dao.ClassifyConfigMapper">
    <resultMap id="BaseResultMap" type="com.belong.model.ClassifyConfig">
        <id column="TYPE_HREF" property="typeHref" jdbcType="VARCHAR"/>
        <result column="TYPE_NAME" property="typeName" jdbcType="VARCHAR"/>
        <result column="OP_TIME" property="opTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="selectAll" resultMap="BaseResultMap">
        select * from classify_config_view
    </select>
    <insert id="addClassify" parameterType="map">
      insert into classify_config (TYPE_HREF, TYPE_NAME, OP_TIME)
      values (#{typeHref,jdbcType=VARCHAR}, #{typeName,jdbcType=VARCHAR},now())
  </insert>
</mapper>
